<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="seq_employee" model="ir.sequence">
            <field name="name">Employee Sequence</field>
            <field name="code">tech.employee.seq</field>
            <field name="prefix">EM</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_customer" model="ir.sequence">
            <field name="name">Customer Sequence</field>
            <field name="code">tech.customer.seq</field>
            <field name="prefix">CM</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_invoice" model="ir.sequence">
            <field name="name">Invoice Sequence</field>
            <field name="code">all_tech.invoice.sequence</field>
            <field name="prefix">AT-%(year)s%(month)s%(day)s-IN</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
        </record>

</odoo>